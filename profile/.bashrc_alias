# github.com/newlight77/bash_custom

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias cd..='cd ..'

alias pull='git pull'
alias push='git push'
alias commit='git commit -a'
alias add='git add'
#git aliased to git-publish -> push current branch` to origin and then track
alias publish='git publish'
alias status='git status'

alias gstatus='git status'
alias gchekout='git checkout'
alias gbranch='git branch'
alias gcherrypick='git cherry-pick'
alias grebase='git rebase'
alias gmerge='git merge'
alias gcommit='git commit'
alias glog='git log'
alias greset='git reset'
alias gpush='git push'
alias gpull='git pull'

alias clean-docker-all='cleanAllContainers cleanAllImages cleanAllVolumes'

if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias docker-clean=' \
  docker ps --no-trunc -aqf "status=exited" | xargs docker rm ; \
  docker images --no-trunc -aqf "dangling=true" | xargs docker rmi ; \
  docker volume ls -qf "dangling=true" | xargs docker volume rm'

